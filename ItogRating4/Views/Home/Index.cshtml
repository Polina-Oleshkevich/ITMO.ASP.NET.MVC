@{
    ViewBag.Title = "Главная";
}

<div class="row">
    <div class="col-md-4">

        <h1>Студенты</h1>
        <table class="table-bordered">
            <tr><td><p>Студент</p></td><td><p>Возраст</p></td><td><p>Телефон</p></td><td><p>Адрес почты</p></td></tr>
            @foreach (var c in ViewBag.Ratings)
            {
                <tr><td><p>@c.Name</p></td><td><p>@c.Age</p></td><td><p>@c.Phone</p></td><td><p>@c.Email</p></td></tr>
            }
        </table>
        <p>
            <a class="btn btn-default"
               href="/Home/CreateBid">Добавить студента &raquo;</a>
        </p>

        <div>
            <h5>Итого баллов у студента:</h5>
        </div>
        <div>
            @using (Ajax.BeginForm("BidSearch", new AjaxOptions { UpdateTargetId = "results" }))
            {<input type="text" name="StudentName" /> <input type="submit" value="Поиск" />}
            <div id="results">
            </div>
        </div>

       
    </div>
</div>
